# Lost Objects Detection Service - Environment Variables
# Copy this file to .env and customize the values

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Service host and port
API_HOST=0.0.0.0
API_PORT=8000

# Logging configuration
LOG_LEVEL=info
LOG_DIR=./logs

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Model storage paths
MODELS_DIR=./storage/models
CACHE_DIR=./storage/cache
TEMP_DIR=./storage/temp

# Default model for inference
DEFAULT_MODEL=stable_model_epoch_30

# Model performance settings
MAX_CACHED_MODELS=3
MAX_CACHE_MEMORY_MB=2048

# GPU configuration
CUDA_VISIBLE_DEVICES=0
ENABLE_GPU=true
GPU_MEMORY_FRACTION=0.8

# =============================================================================
# DETECTION PARAMETERS
# =============================================================================

# Detection thresholds
CONFIDENCE_THRESHOLD=0.3
NMS_THRESHOLD=0.5
MAX_DETECTIONS=50

# Lost object tracking
SUSPECT_THRESHOLD_SECONDS=30
LOST_THRESHOLD_SECONDS=300
MAX_PERSON_DISTANCE_METERS=3.0

# =============================================================================
# STREAMING CONFIGURATION
# =============================================================================

# WebSocket streaming limits
MAX_STREAMING_CLIENTS=50
MAX_STREAMING_FPS=30
STREAM_BUFFER_SIZE=10

# Stream processing model
STREAM_MODEL=fast_stream_model

# =============================================================================
# BATCH PROCESSING
# =============================================================================

# Batch job limits
MAX_BATCH_FILES=1000
MAX_FILE_SIZE_MB=50
MAX_CONCURRENT_BATCH_JOBS=5
BATCH_JOB_TIMEOUT_SECONDS=3600

# =============================================================================
# VIDEO PROCESSING
# =============================================================================

# Video processing limits
MAX_VIDEO_SIZE_MB=500
MAX_VIDEO_DURATION_MINUTES=30
MAX_CONCURRENT_VIDEO_JOBS=3

# Supported video formats
SUPPORTED_VIDEO_FORMATS=.mp4,.avi,.mov,.mkv

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database type (sqlite, postgresql)
DATABASE_TYPE=sqlite

# SQLite configuration
SQLITE_PATH=./storage/lost_objects.db

# PostgreSQL configuration (if using PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=lost_objects
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password
REDIS_MAX_CONNECTIONS=10

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS settings
CORS_ORIGINS=*
CORS_METHODS=*
CORS_HEADERS=*

# API security
MAX_REQUEST_SIZE_MB=100
RATE_LIMIT_PER_MINUTE=100
ENABLE_API_KEY_AUTH=false
API_KEY_HEADER=X-API-Key

# SSL/TLS (for production)
SSL_KEYFILE=
SSL_CERTFILE=

# =============================================================================
# MONITORING AND METRICS
# =============================================================================

# Monitoring settings
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Performance tracking
PERFORMANCE_TRACKING=true
ERROR_TRACKING=true
LOG_REQUESTS=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker service ports
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
FILEBROWSER_PORT=8080

# Grafana credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development specific settings (only for ENVIRONMENT=development)
DEBUG=true
RELOAD=true
WORKERS=1

# Test database
TEST_DATABASE_URL=sqlite:///./test.db

# =============================================================================
# OPTIMIZATION SETTINGS
# =============================================================================

# Model optimization
ENABLE_MODEL_OPTIMIZATION=false
ENABLE_QUANTIZATION=false
ENABLE_TENSORRT=false
ENABLE_ONNX_EXPORT=false

# Memory optimization
CACHE_OPTIMIZATION=true
MEMORY_OPTIMIZATION=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_BATCH_PROCESSING=true
ENABLE_VIDEO_PROCESSING=true
ENABLE_WEBSOCKET_STREAMING=true
ENABLE_MODEL_CACHING=true
ENABLE_GPU_ACCELERATION=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ADVANCED_TRACKING=true
ENABLE_MULTI_MODEL_SUPPORT=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# External API keys (if needed)
EXTERNAL_API_KEY=your_external_api_key
EXTERNAL_SERVICE_URL=https://api.external-service.com

# Cloud storage (if using cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-1

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
NOTIFICATION_FROM_EMAIL=noreply@yourcompany.com

# Webhook notifications (optional)
WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================

# Deployment profile (edge, high_performance, cloud)
DEPLOYMENT_PROFILE=production

# Resource limits
MAX_CPU_CORES=4
MAX_MEMORY_GB=8

# Backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# =============================================================================
# CUSTOM APPLICATION SETTINGS
# =============================================================================

# Custom settings for your specific deployment
CUSTOM_SETTING_1=value1
CUSTOM_SETTING_2=value2

# Organization/Company specific
COMPANY_NAME=Your Company
DEPLOYMENT_NAME=Production Lost Objects Detection
CONTACT_EMAIL=admin@yourcompany.com

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env and customize values
# 2. Never commit .env file to version control
# 3. Use strong passwords for production
# 4. Adjust memory and CPU limits based on your hardware
# 5. Enable only the features you need
# 6. Configure monitoring in production environments
# 7. Set up proper SSL certificates for production
# 8. Use environment-specific values for different deployments